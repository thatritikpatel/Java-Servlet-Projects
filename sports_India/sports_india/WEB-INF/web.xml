<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>



  <servlet>
    <servlet-name>ap01</servlet-name>
    <servlet-class>controllers.StudentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ap01</servlet-name>
    <url-pattern>/student.do</url-pattern>
  </servlet-mapping>

  
  <servlet>
    <servlet-name>ap02</servlet-name>
    <servlet-class>controllers.TeacherServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ap02</servlet-name>
    <url-pattern>/teacher.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ap03</servlet-name>
    <servlet-class>controllers.AddStudentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ap03</servlet-name>
    <url-pattern>/addstudent.do</url-pattern>
  </servlet-mapping>


  
  <servlet>
    <servlet-name>ap04</servlet-name>
    <servlet-class>controllers.ShowStudentsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ap04</servlet-name>
    <url-pattern>/allstudents.do</url-pattern>
  </servlet-mapping>

  
  <servlet>
    <servlet-name>ap05</servlet-name>
    <servlet-class>controllers.DeleteServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ap05</servlet-name>
    <url-pattern>/delete.do</url-pattern>
  </servlet-mapping>


  <servlet>
	<servlet-name>app0010</servlet-name>
	<servlet-class>controllers.AddQueryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app0010</servlet-name>
	<url-pattern>/addquery.do</url-pattern>
  </servlet-mapping>

  <servlet>
	<servlet-name>app0011</servlet-name>
	<servlet-class>controllers.QueryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app0011</servlet-name>
	<url-pattern>/query.do</url-pattern>
  </servlet-mapping>

  
  <servlet>
	<servlet-name>app0012</servlet-name>
	<servlet-class>controllers.SignUpServlet</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>app0012</servlet-name>
	<url-pattern>/signup.do</url-pattern>
  </servlet-mapping>


</web-app>
